@model GamIntraStandard.Common.User
@{
    ViewBag.Title = "Index";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>@ViewBag.Title - GamIntraStandard</title>

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    
    @Scripts.Render("~/bundles/jquery")
    @Styles.Render("~/Content/css")

</head>
<body>
    <div class="container-fluid">
        <div class="row login-bg" data-pg-name="Row">
            <video id="video0" width="100%" height="100%" autoplay="autoplay" loop="">
                <source src="https://s3.amazonaws.com/dittodc/Oslo.webm" type="video/mp4">
                Your browser does not support HTML5 video.
            </video>
        </div>
    </div>
    <div class="container-fluid login-master">
        <div class="row login-center">
            <div class="col-md-4 center-block">
                <div class="row">
                    <h3 class="text-uppercase text-center">Iniciar sesion</h3>
                </div>
                <div class="row center-block">
                    <i class="material-icons pull-left">account_circle</i>
                </div>
                @using (Ajax.BeginForm("LoginUser", "Login", new AjaxOptions { }))
                {
                    <div class="row login-btns">
                        <div class="col-md-12 col-lg-12">
                            @Html.TextBoxFor(c=> c.UserId, new { @class= "form-control login-btn", @id="login-user", @placeholder="Usuario"})
                            @Html.TextBoxFor(c => c.Password, new { @class = "form-control login-btn", @id = "login-pass", @placeholder="Contraseña", @type="password"})                      
                            <button id="login-btn" type="button" class="btn btn-default center-block">Siguiente</button>
                        </div>
                   </div>
                }
                <div class="row">
                    <img src="~/assets/img/logo_client.png" width="200" height="70" />
                </div>
            </div>
        </div>
    </div>
    <!-- Bootstrap core JavaScript
    ================================================== -->
    @* @Scripts.Render("~/bundles/jquery")*@
    @Scripts.Render("~/bundles/bootstrap")

</body>
</html>
