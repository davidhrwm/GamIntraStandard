@model GamIntraStandard.Common.CambioTurno


<div class="jornada-turno-master">
    <p class="v">Versión view: 2017.2.20.1A</p>
    <div class="container" data-pg-collapsed>
        <div class="row">
            <div class="col-md-12 col-lg-12 col-sm-12 col-xs-12">
                <div class="perfil-info-titulo text-center text-uppercase">
                    <p>Cambio de turno</p>
                </div>
                <div class="perfil-info-contenido">
    @using (Html.BeginForm("BtnCambiarTurno", "Jornada", FormMethod.Post, new { @class = "inside" }))
    {
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-6 col-lg-6">
                                <div class="form-group">
                                    <label class="control-label" for="formInput59">Dia afectado:</label>
                                    @Html.TextBoxFor(x => x.diaAfectat, new { @class = "form-control", @type = "date", required = "required", min = DateTime.Now.ToString("yyyy-MM-dd") })
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-6">
                                <div class="form-group">
                                    <label class="control-label" for="formInput59">Dia sustitucion:</label>
                                   @Html.TextBoxFor(x => x.diaSubs, new { @class = "form-control", @type = "date", required = "required", min = DateTime.Now.ToString("yyyy-MM-dd") })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 col-lg-6">
                                <div class="form-group">
                                    <label class="control-label" for="formInput79">Trabajador:</label>
                                    @Html.TextBoxFor(x => x.usuario, new { @class = "form-control", @readonly = "readonly", required = "required" })
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-6">
                                <div class="form-group">
                                    <label class="control-label" for="formInput79">Trabajador:</label>
                                    @Html.DropDownListFor(m=> m.codiTrb, Model.usuario2, new { @class = "form-control", required = "required" })
                                </div>
                            </div>                           
                        </div>
                        <div class="row">
                            <div class="col-md-4 center-block">
                                <div class="form-group">
                                    <label class="control-label" for="formInput119">Observaciones:</label>                                    
                                    @Html.TextAreaFor(x=> x.obs, new { @class="form-control"})
                                </div>
                                <button type="submit" class="btn btn-default center-block">Enviar</button>
                            </div>
                        </div>
                    </div>
}
                </div>
            </div>
        </div>
    </div>
</div>